import pytz
from datetime import datetime

# Specify the time zone you want to get the current date and time for
desired_timezone = 'America/New_York'  # For example, New York time

# Get the current date and time in the desired time zone
current_time = datetime.now(pytz.timezone(desired_timezone))

# Print the current date and time
print("Current date and time in", desired_timezone, ":", current_time)
