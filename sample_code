import streamlit as st
import pandas as pd

# Sample DataFrame
data = {'Name': ['Alice', 'Bob', 'Charlie'],
        'Age': [25, 30, 35],
        'Location': ['New York', 'London', 'Paris']}
df = pd.DataFrame(data)

# Display tabular data as buttons
for index, row in df.iterrows():
    # Concatenate the row values to create the button label
    button_label = f"{row['Name']} - Age: {row['Age']}, Location: {row['Location']}"
    # Display the button
    if st.button(button_label):
        # You can add actions when the button is clicked
        st.write(f"Button {row['Name']} clicked!")
